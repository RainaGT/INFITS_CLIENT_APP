        <!--                app:gradientEndColor="@color/colorAccent" />-->




        <ImageView
            android:id="@+id/bottleimg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/water_bottle_final"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/water_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/bottleimg"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_regular"
            android:text="1000ml"
            android:textColor="#0051AB"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/setgoalGuidline"
            app:layout_constraintStart_toStartOf="parent" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/waterAnimation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/setgoalGuidline"
            tools:ignore="HardcodedText" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/setgoalGuidline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.22" />

        <!--                <TextView-->
        <!--                    android:id="@+id/water_goal"-->
        <!--                    android:layout_width="wrap_content"-->
        <!--                    android:layout_height="wrap_content"-->
        <!--                    android:layout_gravity="center_horizontal"-->
        <!--                    android:fontFamily="@font/roboto_regular"-->
        <!--                    android:text="1000ml"-->
        <!--                    android:textColor="#0051AB"-->
